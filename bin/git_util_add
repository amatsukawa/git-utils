#!/bin/bash

if [[ -z $GIT_UTILS_CACHE ]]; then
  echo 'Please set the $GIT_UTILS_CACHE env varable.'
  exit 1
fi

cmd=$(head -n 1 $GIT_UTILS_CACHE/cache)

if [ "$cmd" == "## status" ]; then
  python $GIT_UTILS_ROOT/substitute.py $@ | xargs git add
else
  echo "The last command you ran was not gs."
  exit 1
fi
